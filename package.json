{
  "name": "vidar",
  "version": "0.5.0",
  "description": "A flexible video-editing library for the browser",
  "browser": "src/index.js",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "spec"
  },
  "dependencies": {},
  "devDependencies": {
    "docdash": "^1.1.1",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "http-server": "^0.11.1",
    "jasmine": "^3.4.0",
    "jsdoc": "^3.6.3",
    "jsdoc-export-default-interop": "^0.3.1",
    "karma": "^4.3.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-jasmine": "^2.0.1",
    "rollup": "^1.19.4",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-uglify-es": "^0.0.1"
  },
  "scripts": {
    "build": "npm run lint --silent && rollup -c",
    "doc": "rm -rf docs && npx jsdoc -r src -d docs -t node_modules/docdash",
    "lint": "eslint -c eslint.conf.js --ext .js,.html src examples && eslint -c eslint.test-conf.js spec",
    "lint-fix": "eslint -c eslint.conf.js --ext .js,.html --fix src examples && eslint -c eslint.test-conf.js --fix spec",
    "start": "http-server",
    "test": "npm run build --silent && karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clabe45/vidar.git"
  },
  "keywords": [
    "video-editing",
    "video-editor",
    "browser",
    "api-driven"
  ],
  "author": "clabe45",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/clabe45/vidar/issues"
  },
  "homepage": "https://github.com/clabe45/vidar#readme"
}
